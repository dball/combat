<section id="combat">
  <div id="sidebar">
    <ul id="controls">
      <li><%= button_to('New Map', maps_path) %></li>
      <li data-control="create figure"><button>Figure</button> <input type="text" size="1" maxlength="1" value="X"></li>
      <li data-control="draw wall"><button>Wall</button></li>
    </ul>
    <div id="trashcan"></div>
  </div>
  <div id="viewport">
    <canvas id="map"></canvas>
  </div>
  <%= javascript_tag do %>
    $(function() {
      Combat.init(<%= @json.html_safe %>, 'map', 'viewport', 'actions');
    });
  <% end %>
</section>
